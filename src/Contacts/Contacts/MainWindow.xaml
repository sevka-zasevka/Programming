<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.17*" />
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" 
                      VerticalAlignment="Stretch" Grid.RowSpan="2" />
        <GroupBox Grid.Column="0" Header="Edit Contact" Margin="15 15 1.5 0">
            <StackPanel>
                <Label Content="Name:" Margin="3 3 3 0"/>
                <TextBox x:Name="NameTextBox" Margin="3 3 3 3"/>
                <Label Content="Phone Number:" Margin="3 0 3 0"/>
                <TextBox x:Name="PhoneNumTextBox" Margin="3 3 3 3"/>
                <Label Content="E-mail:" Margin="3 0 3 0"/>
                <TextBox x:Name="EmailTextBox" Margin="3 3 3 3"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="2" Header="Read Contact" Margin="1.5 15 15 0">
            <StackPanel Margin="3 0 3 0">
                <Label Content="Name:"/>
                <Label Content="Some name" x:Name="NameLabel" FontWeight="Bold"/>
                <Label Content="Phone Number:"/>
                <Label Content="phone number" x:Name="PhoneNumLabel" FontWeight="Bold"/>
                <Label Content="E-mail:"/>
                <Label Content="some email" x:Name="EmailLabel" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>
        <Button Grid.Column="2" Grid.Row="1" x:Name="LoadButton" Content="Load" Margin="0 15 15 15" 
                Width="72" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="LoadButton_Click"/>
        <Button Grid.Column="2" Grid.Row="1" x:Name="SaveButton" Content="Save" Margin="15 15 90 15" 
                Width="72" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="SaveButton_Click"/>
    </Grid>
</Window>
